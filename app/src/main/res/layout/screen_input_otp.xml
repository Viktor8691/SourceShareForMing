<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/transparent"
        android:padding="10dp"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppName-Logo"
        android:textSize="@dimen/app_name_font_size"
        android:textColor="@color/color_app_name"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/validate_email"
        style="@style/big_title_style"
        android:layout_marginLeft="@dimen/vertical_baseline"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/txvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:59"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:height="50dp"
        app:width="50dp"
        app:length="5"
        app:otp_box_background_active="@drawable/bg_otp_active"
        app:otp_box_background_inactive="@drawable/bg_otp_inactive"
        app:otp_text_size="24dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txvSentTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sent_to"
        android:padding="20dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/txvEmailVerify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/bg_blue_rect"
        android:gravity="center"
        android:text="@string/validate_email"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/vertical_baseline"
        android:textSize="@dimen/button_font_size"/>

    <TextView
        android:id="@+id/txvResendCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/bg_blue_border_rect"
        android:gravity="center"
        android:text="@string/resend_code"
        android:textColor="@color/colorPrimary"
        android:layout_marginHorizontal="@dimen/vertical_baseline"
        android:textSize="@dimen/button_font_size"
        android:layout_marginVertical="20dp"/>


</LinearLayout>